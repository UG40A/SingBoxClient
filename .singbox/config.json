{
  "experimental": {
    "clash_api": {
      "external_controller": "127.0.0.1:9090"
    }
  },
  "log": {
    "level": "info",
    "output": "/tmp/singbox.log",
    "timestamp": false
  },
  "inbounds": [
    {
      "type": "mixed",
      "tag": "mixed-in",
      "listen": "::",
      "listen_port": 7890,
      "set_system_proxy": true
    }
  ],
  "outbounds": [
    {
      "type": "direct",
      "tag": "direct"
    },
    {
      "type": "block",
      "tag": "block"
    },
    {
      "type": "selector",
      "tag": "proxy",
      "outbounds": [
        "server1"
      ],
      "default": "server1"
    },
    {
      "type": "vmess",
      "tag": "server1",
      "server": "server.domain.com",
      "server_port": 443,
      "uuid": "change me",
      "security": "auto",
      "alter_id": 0
    }
  ],
  "route": {
    "geoip": {
      "path": "__CONF_DIR__/geoip.db"
    },
    "geosite": {
      "path": "__CONF_DIR__/geosite.db"
    },
    "rules": [
      {
        "geosite": "category-ads-all",
        "outbound": "block"
      },
      {
        "process_name": [
          "Telegram Lite"
        ],
        "outbound": "select"
      },
      {
        "geosite": "cn",
        "geoip": [
          "cn",
          "private"
        ],
        "ip_cidr": [
          "10.0.0.0/24",
          "172.16.0.0/12"
        ],
        "outbound": "direct"
      },
      {
        "geosite": "geolocation-!cn",
        "geoip": "!cn",
        "outbound": "select"
      }
    ]
  }
}
